//Parsing Json file

-- Step -01 Creating required schemas

CREATE OR REPLACE SCHEMA BOOTCAMP.external_stages;
CREATE OR REPLACE SCHEMA BOOTCAMP.STAGE_TBLS;
CREATE OR REPLACE SCHEMA BOOTCAMP.INTG_TBLS;

-- Step -02 Creating file format object

CREATE OR REPLACE FILE FORMAT BOOTCAMP.file_formats.FILE_FORMAT_JSON
    TYPE = JSON
    STRIP_OUTER_ARRAY = TRUE;
//If you dont specify TYPE then default will be CSV.

--Step -03 Creating stage object

CREATE OR REPLACE STAGE BOOTCAMP.external_stages.STAGE_JSON
    STORAGE_INTEGRATION = AWS_INT
    URL = 's3://awstosnowflake1995/landing/';

-- Listing files in the stage
LIST @BOOTCAMP.external_stages.STAGE_JSON;


-- Step -04 Creating Stage Table to store RAW Data   

CREATE OR REPLACE TABLE BOOTCAMP.STAGE_TBLS.contact_data_JSON_RAW 
(raw_file variant);



-- Step -05 Copy the RAW data into a Stage Table

COPY INTO BOOTCAMP.STAGE_TBLS.contact_data_JSON_RAW 
    FROM @BOOTCAMP.external_stages.STAGE_JSON
    file_format= BOOTCAMP.file_formats.FILE_FORMAT_JSON
    FILES=('contacts_data.json'); -- Assuming the new file is named accordingly

-- View RAW table data
SELECT * FROM BOOTCAMP.STAGE_TBLS.contact_data_JSON_RAW;

